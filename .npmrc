
# Overrides the default Electron download URL with a faster mirror (npmmirror is popular in China)
electron_mirror=https://npmmirror.com/mirrors/electron/

# Sets the download mirror for electron-builder's native binaries
electron_builder_binaries_mirror=https://github.com/electron-userland/electron-builder-binaries/releases/download/

# Ensures all dependencies (even deeply nested ones) are hoisted to the top-level node_modules folder
# This can help avoid issues with module resolution, especially in monorepos or complex setups
shamefully-hoist=true
